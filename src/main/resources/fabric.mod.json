{
  "schemaVersion": 1,
  "id": "hpm",
  "version": "${version}",

  "name": "Haste Potion Mod",
  "description": "This simple 1.19.2 fabric mod introduces haste potions into the game. They can be brewed using an emerald block and last 10 minutes.",
  "authors": [
    "starfall"
  ],
  "contact": {
    "sources": "https://github.com/mdbrnd/HastePotionMod"
  },

  "license": "MIT License",
  "icon": "assets/hpm/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.starfall.hpm.HastePotionMod"
    ]
  },
  "mixins": [
    "hpm.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.10",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
